# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
# Not required if AI_DRY_RUN=true
OPENAI_API_KEY=sk-your-api-key-here

# AI Model Configuration
# Model to use for summarization and Q&A (default: gpt-5-nano)
OPENAI_SUMMARY_MODEL=gpt-5-nano
OPENAI_QA_MODEL=gpt-5-nano

# AI Dry-Run Mode (RECOMMENDED for development and testing)
# Set to 'true' to enable dry-run mode: generates dummy summaries without API calls
# This saves money during development and testing
# When enabled, OPENAI_API_KEY is not required
AI_DRY_RUN=true

# Number of characters to use for dummy summaries in dry-run mode (default: 500)
AI_DRY_RUN_SUMMARY_CHARS=500

# Database Configuration
# Path to DuckDB database file (will be created if doesn't exist)
DATABASE_PATH=./data/crl_explorer.duckdb

# FDA API URLs for bulk data downloads
FDA_BULK_APPROVED_URL=https://download.open.fda.gov/approved_CRLs.zip
FDA_BULK_UNAPPROVED_URL=https://download.open.fda.gov/unapproved_CRLs.zip

# Scheduled Task Configuration
# Hour of day to run daily data pipeline (0-23, default: 2 for 2 AM)
SCHEDULE_HOUR=2

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# CORS Configuration
# Allowed origins for frontend (comma-separated for multiple origins)
# Example: http://localhost:5173,http://localhost:3000
CORS_ORIGINS=http://localhost:5173

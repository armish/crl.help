# Coverage.py configuration for FDA CRL Explorer

[run]
# Source code to measure
source = app

# Omit certain files from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    */.venv/*
    */site-packages/*
    __init__.py
    app/utils/logging_config.py
    # Phase 3 modules - not yet implemented/tested
    app/services/data_ingestion.py
    app/services/data_processor.py

# Branch coverage
branch = True

# Parallel mode for multiprocessing
parallel = False

# Use relative file paths for compatibility with GitHub Actions
relative_files = true

[report]
# Precision for coverage percentage
precision = 2

# Show lines that weren't executed
show_missing = True

# Skip covered files
skip_covered = False

# Skip empty files
skip_empty = True

# Coverage is reported but does not fail tests
# fail_under = 80

# Exclude certain lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

    # Don't complain about abstract methods
    @abstract
    @abstractmethod

    # Don't complain about protocol methods
    \.\.\.
    pass

# Ignore errors
ignore_errors = False

[html]
# Directory for HTML report
directory = htmlcov

# Title for HTML report
title = FDA CRL Explorer Coverage Report

[xml]
# XML report output file
output = coverage.xml

# Database Configuration
# URL to download the DuckDB database file (optional - only needed if database doesn't exist)
DATABASE_URL=https://example.com/path/to/crl_explorer.duckdb

# OpenAI API Key (required unless AI_DRY_RUN=true)
# Must be at least 20 characters and start with 'sk-'
OPENAI_API_KEY=sk-your-api-key-here

# Application Settings
LOG_LEVEL=INFO
CORS_ORIGINS=*

# AI Configuration
# Enable dry-run mode to skip API calls and use dummy data (useful for testing without API costs)
AI_DRY_RUN=false

# AI Model Configuration (optional - defaults shown)
OPENAI_SUMMARY_MODEL=gpt-5-nano
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_QA_MODEL=gpt-5-nano
